<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center">Welcome to Link Shortener</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <form action="link/create" method="post">
        <div class="form-group">
          <label for="original">Insert your original link</label>
          <input class="form-control" type="text" name="original" id="original" placeholder="Original link">
        </div>
        <div class="form-group">
          <label for="custom">Insert your custom link</label>
          <input class="form-control" type="text" name="custom" id="custom" placeholder="Custom link">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </form>
    </div>
  </div>
  {{# if status}}
  <div class="row mt-3 justify-content-center">
    <div class="col-lg-6">
      <div class="alert alert-success" role="alert">
        <h4><b>Link successfully created</b></h4>
        <p class="mb-1"><b>Original link : </b> {{original}}</p>
        <p><b>Custom link : </b> {{custom}}</p>
      </div>
    </div>
  </div>
  {{/if}}
</div>